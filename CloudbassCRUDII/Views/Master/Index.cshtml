<script type="text/javascript">
    $(document).ready(function () {

        $('#mpvalue').autocomplete({
            source: '@Url.Action("GetMP")'
        });

    })
    $('#dateCreated').datepicker({
        dateFormat: 'mm-dd-yy'
    })

</script>

<style>
    span.error {
    display:block;
    visibility:hidden;
    color:red;
    font-size:90%;
    }

    tr.error {
    background-color:rgba(255,0,0,0.35);
    }
</style>